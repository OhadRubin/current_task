{
  "name": "fastapi-electron-app",
  "version": "1.0.0",
  "description": "Electron wrapper for FastAPI server",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-server": "node build-server.js",
    "build-icons": "node create-icons.js",
    "build": "npm run build-icons && npm run build-server && electron-builder",
    "pack": "npm run build-server && electron-builder --dir",
    "dist": "npm run build-icons && npm run build-server && electron-builder"
  },
  "keywords": ["fastapi", "electron", "server"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.example.fastapi",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "files": [
      "**/*",
      "!backend/",
      "backend/dist/server"
    ],
    "extraResources": [
      {
        "from": "backend/dist/",
        "to": "backend",
        "filter": ["**/*"]
      }
    ]
  }
}
